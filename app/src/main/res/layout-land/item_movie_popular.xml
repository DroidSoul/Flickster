<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivMovieImagePopular"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:src="@drawable/large_movie_poster"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foregroundGravity="center"
        android:id="@+id/ivPlayIcon"
        android:elevation="10dp"
        android:src="@drawable/youtube_play_icon"
        android:layout_alignLeft="@+id/ivMovieImagePopular"
        android:layout_alignRight="@+id/ivMovieImagePopular"
        android:layout_marginTop="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvTitlePopular"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivMovieImagePopular"
        android:layout_toEndOf="@+id/ivMovieImagePopular" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:maxLines="4"
        android:ellipsize="end"
        android:id="@+id/tvOverviewPopular"
        android:layout_below="@+id/tvTitlePopular"
        android:layout_toRightOf="@+id/ivMovieImagePopular"
        android:layout_toEndOf="@+id/ivMovieImagePopular" />
</RelativeLayout>